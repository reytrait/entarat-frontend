{
  "name": "entarat-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @entarat/web dev & pnpm --filter @entarat/server start:dev",
    "dev:web": "pnpm --filter @entarat/web dev",
    "dev:server": "pnpm --filter @entarat/server start:dev",
    "build": "pnpm --filter @entarat/shared build && pnpm --filter @entarat/server build && pnpm --filter @entarat/web build",
    "build:shared": "pnpm --filter @entarat/shared build",
    "build:server": "pnpm --filter @entarat/server build",
    "build:web": "pnpm --filter @entarat/web build",
    "start": "pnpm --filter @entarat/server start:prod & pnpm --filter @entarat/web start",
    "lint": "pnpm --filter @entarat/web lint",
    "format": "pnpm --filter @entarat/web format"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
